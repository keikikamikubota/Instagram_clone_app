<h1>ユーザー編集画面</h1>
<br>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <div class="user_name">
    <%= f.label :ユーザー名 %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :新パスワード %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :新パスワード確認 %>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit "編集" %>
<% end %>

<%= link_to 'Index', pictures_path, class: "btn btn-outline-primary" %>