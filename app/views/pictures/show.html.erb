<p id="notice"><%= notice %></p>


<p>
  <strong>Text:</strong>
  <%= @picture.content %>
</p>
<p>
  <strong>Photo:</strong>
  <%= image_tag @picture.image.url, class:'icon-midium' %>
</p>
<% unless @picture.user_id == current_user.id %>

  <% if @favorite.present? %>
    <%= link_to 'いいね解除', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'いいね', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-outline-danger' %>
  <% end %>
<% end %>

<%= link_to '編集', edit_picture_path(@picture), class: "btn btn-outline-success" %>
<%= link_to 'Index', pictures_path, class: "btn btn-outline-primary" %>